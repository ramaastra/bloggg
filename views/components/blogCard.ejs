<div class="card p-0">
  <img
    src="/uploads/<%= blog.image %>"
    class="card-img-top object-fit-cover"
    style="height: 150px" alt="<%= blog.title %>"
  >
  <div class="card-body p-3">
    <p class="mb-0 text-body-tertiary"><%= blog.author.name %></p>
    <a href="/blog/read/<%= blog.id %>" class="text-dark text-decoration-none">
      <h5 class="card-title"><%= blog.title %></h5>
    </a>
    <p class="card-text"
    style="
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 4;
      line-clamp: 4; 
      -webkit-box-orient: vertical;
    ">
      <%= blog.body %>
    </p>
    <span class="badge rounded-pill"
      style="background-color: <%= blog.category.labelColor %>"
    >
      <i class="<%= blog.category.icon %>"></i>
      <%= blog.category.name %>
    </span>
  </div>
  <div class="card-footer">
    <small class="text-body-secondary">Last updated 3 mins ago</small>
  </div>
</div>