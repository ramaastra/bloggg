<!DOCTYPE html>
<html lang="id">
<head>
  <%- include("../../setups/head") %>
</head>
<body>
  <%- include("../../components/navbar", { user }) %>

  <div class="container-fluid p-5 d-flex justify-content-center">
    <div class="card" style="min-width: 30%;">
      <h5 class="card-header display-6 fs-2 text-center px-4 py-3">
        Daftar Akun Baru
      </h5>
      <div class="card-body">
        <form action="/register" method="post">
          <div class="mb-3">
            <label for="name" class="form-label">Nama</label>
            <input name="name" id="name" type="text" class="form-control">
          </div>
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control">
          </div>
          <div class="mb-3">
            Sudah punya akun? Login di <a href="/login">sini</a>
          </div>
          <button type="submit" class="btn btn-primary w-100">
            Daftar
          </button>
        </form>
      </div>
    </div>
  </div>

  <%- include("../../setups/script") %>
</body>
</html>