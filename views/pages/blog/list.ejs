<!DOCTYPE html>
<html lang="id">
<head>
  <%- include("../../setups/head") %>
</head>
<body>
  <%- include("../../components/navbar", { user }) %>

  <div class="container-fluid p-5">
    <h1 class="display-6 text-center">Jelajahi Semua Blog</h1>
    <% if(blogs.length < 1) { %>
      <div class="card mt-4 m-auto text-center" style="max-width: 300px;">
        <div class="card-header bg-danger"></div>
        <div class="card-body">
          <h5 class="card-title">Belum Ada Blog</h5>
          <p class="card-text">Mau coba buat blogmu sendiri?</p>
          <a href="/blog/create" class="btn btn-primary">Buat Blog</a>
        </div>
      </div>
    <% } else { %>
      <div class="mt-2 row row-cols-1 row-cols-md-3 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <%- include("../../components/blogCard", { blog }) %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include("../../setups/script") %>
</body>
</html>